cabal-version:   1.18
name:            tasty-test-reporter
version:         0.1.1.4.0.0.0.0.2
license:         BSD3
license-file:    LICENSE
copyright:       2020 Christoph Hermann
maintainer:      schtoeffel@gmail.com
author:          Christoph Hermann
homepage:        https://github.com/stoeffel/tasty-test-reporter#readme
bug-reports:     https://github.com/stoeffel/tasty-test-reporter/issues
synopsis:        Producing JUnit-style XML test reports.
description:
    Please see the README at <https://github.com/stoeffel/tasty-test-reporter>.

category:        Testing
build-type:      Simple
extra-doc-files:
    README.md
    CHANGELOG.md

source-repository head
    type:     git
    location: https://github.com/stoeffel/tasty-test-reporter

library
    exposed-modules:  Test.Tasty.Runners.Reporter
    hs-source-dirs:   src
    other-modules:
        Test.Console.Color
        Paths_tasty_test_reporter

    default-language: Haskell2010
    build-depends:
        ansi-terminal >=0.8 && <2,
        base >=4.10.1.0 && <5,
        concurrent-output >=1.10 && <1.11,
        containers >=0.5 && <0.9,
        directory >=1.3 && <2,
        filepath >=1.4 && <1.6,
        junit-xml >=0.1 && <0.2,
        mtl >=2.2 && <2.4,
        safe-exceptions >=0.1 && <0.2,
        stm >=2.4 && <2.6,
        tagged >=0.8 && <0.9,
        tasty >=0.1 && <1.6,
        text >=1.2 && <2.2

test-suite spec
    type:             exitcode-stdio-1.0
    main-is:          Main.hs
    hs-source-dirs:   test
    other-modules:    Paths_tasty_test_reporter
    default-language: Haskell2010
    build-depends:
        base,
        tasty,
        tasty-hunit,
        tasty-test-reporter
